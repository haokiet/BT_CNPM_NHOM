@model BTNhom3_CNPM.Models.SanPham

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/Layout_Admin.cshtml";
}

<main id="main" class="main">
    <div class="pagetitle">
        <h1>Thêm mới Sản Phẩm</h1>
    </div><!-- End Page Title -->
    <section class="section" >
        <div class="row">
            <div class="col-lg-12">

                <div class="card">
                    <div class="card-body">
                        <div style="float:left;width:90%">
                            @using (Html.BeginForm("Create", "SanPhams", FormMethod.Post, new { enctype = "multipart/form-data" }))
                            {
                                @Html.AntiForgeryToken()

                            <div class="form-horizontal">
                                <hr />
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                <table cellpadding="2" cellspacing="10" align="center">
                                    <tr>
                                        <td>
                                            Mã Sản Phẩm:
                                        </td>
                                        <td>
                                            <div class="col-md-10">
                                                <input type="text" value="@ViewBag.MaSP" disabled readonly class="form-control" />
                                                @*@Html.EditorFor(model => model.MaSP,"@ViewBag.MaSP", new { htmlAttributes = new { @class = "form-control",disabled = "disabled", @readonly = "readonly" } })*@
                                                @Html.ValidationMessageFor(model => model.MaSP, "", new { @class = "text-danger" })
                                            </div>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>Tên Sản Phẩm:</td>
                                        <td>
                                            <div class="col-md-10">
                                                @Html.EditorFor(model => model.TenSP, new { htmlAttributes = new { @class = "form-control" } })
                                                @Html.ValidationMessageFor(model => model.TenSP, "", new { @class = "text-danger" })
                                            </div>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>Đơn Giá:</td>
                                        <td>
                                            <div class="col-md-10">
                                                @Html.EditorFor(model => model.DonGia, new { htmlAttributes = new { @class = "form-control" } })
                                                @Html.ValidationMessageFor(model => model.DonGia, "", new { @class = "text-danger" })
                                            </div>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>Đơn Vị Tính</td>
                                        <td>
                                            <div class="col-md-10">
                                                @Html.EditorFor(model => model.DonViTinh, new { htmlAttributes = new { @class = "form-control" } })
                                                @Html.ValidationMessageFor(model => model.DonViTinh, "", new { @class = "text-danger" })
                                            </div>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>Ảnh Sản Phẩm:</td>
                                        <td>
                                            <div class="col-md-10">
                                                <input type="file" style="height:30px;" name="Avatar" accept="image/*" required />
                                                @Html.ValidationMessageFor(model => model.AnhDaiDien, "", new { @class = "text-danger" })
                                            </div>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>Nhà Cung Cấp</td>
                                        <td>
                                            <div class="col-md-10">
                                                @Html.DropDownList("MaNCC", null, htmlAttributes: new { @class = "form-control" })
                                                @Html.ValidationMessageFor(model => model.MaNCC, "", new { @class = "text-danger" })
                                            </div>
                                        </td>
                                        <td>
                                            <a style="border:1px solid black;color:cornflowerblue;margin-top:500px" href="#">thêm</a>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>Loại</td>
                                        <td>
                                            <div class="col-md-10">
                                                @Html.DropDownList("MaLoai", null, htmlAttributes: new { @class = "form-control" })
                                                @Html.ValidationMessageFor(model => model.MaLoai, "", new { @class = "text-danger" })

                                            </div>
                                        </td>
                                        <td>
                                            <a style="border:1px solid black;color:cornflowerblue;margin-top:500px" href="#">thêm</a>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>Mô Tả</td>
                                        <td>
                                            <div class="col-md-10">
                                                @Html.EditorFor(model => model.MoTaSP, new { htmlAttributes = new { @class = "form-control" } })
                                                @Html.ValidationMessageFor(model => model.MoTaSP, "", new { @class = "text-danger" })
                                            </div>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td></td>
                                        <td>
                                            <div class="form-group1">
                                                <div class="col-md-offset-2 col-md-10">
                                                    <input style="border:1px solid black;color:cornflowerblue" type="submit" value="Thêm mới" class="btn btn-default" />
                                                </div>
                                            </div>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <div>
                                                <button>@Html.ActionLink("Hủy", "Create")</button>
                                                <button>@Html.ActionLink("Quay lại", "Index")</button>
                                            </div>
                                        </td>
                                    </tr>
                                </table>

                            </div>

                            }
                            
                        </div>
                        <div>
                            <
                        </div>
                        
                            
                    </div>
                    </div>
                </div>
            </div>
        </section>
    </main>


