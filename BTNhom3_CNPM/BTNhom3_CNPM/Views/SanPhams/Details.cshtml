@model BTNhom3_CNPM.Models.SanPham

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/Layout_Admin.cshtml";
}
<main id="main" class="main">
    <div class="pagetitle">
        <h1>Chi Tiết Sản Phẩm</h1>
    </div><!-- End Page Title -->
    <section class="section">
        <div class="row">
            <div class="col-lg-12">

                <div class="card">
                    <div class="card-body">
                        <table style="font-size:14px;margin-left:50px;">
                            <tr>
                                <td>
                                    <table cellpadding="2" cellspacing="10">
                                        <tr>
                                            <td rowspan="8"><img src="/Images/@Html.DisplayFor(model => model.AnhDaiDien)" width="200" height="200" /></td>
                                            <td>Mã Sản Phẩm:</td>
                                            <td>@Html.DisplayFor(model => model.MaSP)</td>
                                        </tr>
                                        <tr>
                                            <td>Tên sản Phẩm:</td>
                                            <td>@Html.DisplayFor(model => model.TenSP)</td>
                                        </tr>
                                        <tr>
                                            <td>Đơn Giá:</td>
                                            <td>@Html.DisplayFor(model => model.DonGia)</td>
                                        </tr>

                                        <tr>
                                            <td>Đơn Vị Tính:</td>
                                            <td>@Html.DisplayFor(model => model.DonViTinh)</td>
                                        </tr>
                                        <tr>
                                            <td>Mô Tả:</td>
                                            <td>@Html.DisplayFor(model => model.MoTaSP)</td>
                                        </tr>
                                        <tr>
                                            <td>Nhà Cung Cấp:</td>
                                            <td>@Html.DisplayFor(model => model.NCC.TenNCC)</td>
                                        </tr>
                                        <tr>
                                            <td>Loại:</td>
                                            <td>@Html.DisplayFor(model => model.Loai.TenLoai)</td>
                                        </tr>

                                    </table>
                                </td>
                            </tr>
                        </table>
                        <p style="margin-left:50px;">
                            <button>@Html.ActionLink("Cập nhật", "Edit", new { id = Model.MaSP })</button>
                            <button>@Html.ActionLink("Xóa", "Delete", new { id = Model.MaSP })</button>
                            <button>@Html.ActionLink("Quay lại", "Index")</button>

                        </p>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </main>
